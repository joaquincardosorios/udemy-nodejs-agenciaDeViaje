extends ./layout/index

block contenido 
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque-testimonios

        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonio
                
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje
            .row.justify-content-center.col
                .col-md-8   
                    form(action="/testimonios" method="POST")
                        .form-group
                            label(for='nombre') Nombre
                            input#nombre(type="text", placeholder='Tu nombre', name='nombre' class='form-control', value= nombre)
                        .form-group
                            label(for='correo') Correo Electronico
                            input#nombre(type="text", placeholder='Tu correo', name='correo' class='form-control', value= correo)
                        .form-group
                            label(for='mensaje') Mensaje
                            textarea#mensaje(placeholder='Tu mensaje', name='mensaje' class='form-control', rows=3)= mensaje
                        input.btn.btn-success.btn-block(type="submit")
        